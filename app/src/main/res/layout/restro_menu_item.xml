<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_20">

        <ImageView
            android:id="@+id/iv_ve"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/my_cart_round" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_menu_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken Curry"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_17" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="from $50"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_minus"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/minus"
                android:padding="@dimen/dp_8"
                android:background="@drawable/quantity_buton"/>

            <TextView
                android:id="@+id/tv_itemquantity"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_22"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="@drawable/quantity_no"
                android:text="4"/>


            <ImageView
                android:id="@+id/iv_plus"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/plus"
                android:padding="@dimen/dp_6"
                android:background="@drawable/quantity_buton"/>


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:id="@+id/order_view"
        android:visibility="gone"
        android:background="@color/gray" />


</LinearLayout>