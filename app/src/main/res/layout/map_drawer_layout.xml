<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_10"
        android:id="@+id/cardview_layout"
        android:layout_marginRight="@dimen/dp_5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/iv_map_dimage"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:background="@drawable/fav_image"
                    />


                <TextView
                    android:id="@+id/tv_map_restro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_8"
                    android:text="California Grill"
                    android:layout_toRightOf="@+id/iv_map_dimage"
                    android:paddingLeft="@dimen/sp_12"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    />


                <TextView
                    android:id="@+id/tv_map_cousin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_map_restro"
                    android:layout_marginTop="@dimen/sp_2"
                    android:text="American Fare"
                    android:textColor="@color/d_gray"
                    android:layout_toRightOf="@+id/iv_map_dimage"
                    android:paddingLeft="@dimen/sp_12"
                    android:textSize="@dimen/sp_10"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/sp_12"
                    android:id="@+id/star_id"
                    android:layout_toRightOf="@+id/iv_map_dimage"
                    android:layout_below="@id/tv_map_cousin"
                    android:layout_marginRight="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_4">

                    <ImageView
                        android:id="@+id/iv_first_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_star_selected" />


                    <ImageView
                        android:id="@+id/iv_second_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"

                        android:background="@drawable/red_star_selected" />


                    <ImageView
                        android:id="@+id/iv_third_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/red_star_selected" />


                    <ImageView
                        android:id="@+id/iv_four_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/blank_fav" />


                    <ImageView
                        android:id="@+id/iv_five_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/blank_fav" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(32 Reviews)"
                    android:id="@+id/tv_review"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_below="@+id/star_id"
                    android:layout_toRightOf="@+id/iv_map_dimage"
                    android:textColor="@color/black"/>


                <ImageView
                    android:id="@+id/favOrUnfav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fav"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />


            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>