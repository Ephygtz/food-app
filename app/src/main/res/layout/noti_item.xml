<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_5"
            android:padding="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/iv_notif_user"
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_75"
                    android:background="@drawable/imgae_notification"
                    />


                <TextView
                    android:id="@+id/tv_notif_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sp_8"
                    android:layout_toRightOf="@+id/iv_notif_user"
                    android:paddingLeft="@dimen/sp_12"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    />


                <TextView
                    android:id="@+id/tv_notif_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_notif_content"
                    android:layout_marginTop="@dimen/sp_2"
                    android:layout_toRightOf="@+id/iv_notif_user"
                    android:paddingLeft="@dimen/sp_12"
                    android:textSize="@dimen/sp_10"

                    />
                <TextView
                    android:id="@+id/tv_notif_time1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_notif_content"
                    android:layout_marginTop="@dimen/sp_2"
                    android:layout_toRightOf="@+id/tv_notif_time"
                    android:paddingLeft="@dimen/sp_12"
                    android:textSize="@dimen/sp_10"
                    android:text="hello"
                    android:gravity="right"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_alignParentRight="true"

                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/gray"
                android:id="@+id/noti_viewline">

            </View>


        </LinearLayout>
    </LinearLayout>





</layout>